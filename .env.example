# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# PostgreSQL Connection String (Required)
# Get this from your Neon dashboard or local PostgreSQL instance
# Format: postgresql://[user]:[password]@[host]:[port]/[database]?sslmode=require
DATABASE_URL="postgresql://username:password@host.neon.tech/database?sslmode=require"

# Alternative: Individual PostgreSQL credentials (auto-set from DATABASE_URL)
# PGDATABASE=your_database_name
# PGHOST=your_database_host
# PGPORT=5432
# PGUSER=your_database_user
# PGPASSWORD=your_database_password

# =====================================================
# SESSION & SECURITY
# =====================================================

# Session Secret (Required)
# Generate a strong random string for session encryption
# You can use: openssl rand -base64 32
SESSION_SECRET="your-very-secure-random-secret-key-change-this-in-production"

# =====================================================
# APPLICATION ENVIRONMENT
# =====================================================

# Environment Mode (Optional, default: development)
# Options: development, production, test
NODE_ENV="development"

# =====================================================
# STRIPE INTEGRATION (Future)
# =====================================================

# Stripe API Keys (Optional, for subscription management)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# =====================================================
# EMAIL SERVICE (Future)
# =====================================================

# Email Configuration (Optional, for notifications and invitations)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_NAME="Curbe Admin"
# SMTP_FROM_EMAIL=noreply@curbe.io

# =====================================================
# EXTERNAL SERVICES (Future)
# =====================================================

# AWS S3 or Cloud Storage (Optional, for file uploads)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Redis (Optional, for session store in production)
# REDIS_URL=redis://username:password@host:port

# =====================================================
# FEATURE FLAGS (Future)
# =====================================================

# Enable/Disable Features (Optional)
# ENABLE_ANALYTICS=true
# ENABLE_API_ACCESS=false
# ENABLE_SSO=false
# ENABLE_2FA=false

# =====================================================
# DEVELOPMENT & DEBUGGING
# =====================================================

# Debug Mode (Optional)
# DEBUG=true
# LOG_LEVEL=debug

# =====================================================
# NOTES
# =====================================================

# 1. Never commit this file with real credentials to version control
# 2. Copy this file to .env and fill in your actual values
# 3. Keep .env in .gitignore
# 4. Use strong, unique values for SESSION_SECRET in production
# 5. Rotate secrets regularly in production environments
